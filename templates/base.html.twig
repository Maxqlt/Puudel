<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Puudel!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
        <link rel="stylesheet" href="{{ asset('build/icomoon/style.css') }}">
        <link rel="stylesheet" href="{{ asset('build/cookieconsent/cookieconsent-css.css') }}" />
        <script src="{{ asset('build/cookieconsent/cookieconsent.js') }}"></script>

        <script>
            window.addEventListener("load", function(){
                window.cookieconsent.initialise({
                    "palette": {
                        "popup": {
                            "background": "#666666",
                            "text": "#e3e3e3"
                        },
                        "highlight" : {
                            "background": '#f8e71c', 
                            "border": '#f8e71c', 
                            "text": '#000000'},
                        "button": {
                            "background": "#4b81e8",
                            "text": "#ffffff"
                        }
                    },
                    "theme": "classic",
                    "position": "bottom-right",
                    "type": "opt-out",
                    "content": {
                        "message": "This website uses a üç™ to ensure, we get your timezone and you get the best experience on our website.",
                        "allow": "Your only option",
                        "deny": "not an option",
                        "link": "There is no link to 'Learn more'",
                        "href": "/about"
                    }
                });
            });
        </script>


        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
             {{ encore_entry_script_tags('timezone') }}
             {{ encore_entry_script_tags('ants') }}
        {% endblock %}
    </head>
    <body>
        <div id="root">
            {% block header %}
            <header>
                <nav>
                    <div class="left-nav">
                        <h1>Puudel Project üê©</h1>
                        <a href="{{ path('app_home')}}"><i class="icon-home"></i></a>
                        <a href="{{ path('app_about')}}">About</a>
                        <a href="{{ path('app_icon')}}">icon-list</a>
                        <a href="{{ path('app_anty')}}">Ants</a>

                        <a href="#">Contact</a>
                    </div>
                    <div class="right-nav">
                        <a href="#">
                            <i class="icon-earth"></i>
                        </a>
                        {% if app.user %}
                        <a href="{{ path('app_logout')}}">Logout</a>
                        {% else %}
                        <a href="{{ path('app_register')}}">Register</a>
                        <a href="{{ path('app_login')}}">Login</a>
                        {% endif %}

                    </div>
                </nav>
            </header>
            {% endblock %}
            
            {% if app.session.flashbag.has('error') %}
                {% set lastError = app.session.flashbag.get('error')|last %}
                <div class="alert alert-danger">{{ lastError }}</div>
            {% endif %}
            <div>
                FONT - SIZE 2
            </div>
            {% block body %}
             
            {% endblock %}
            
            {% block footer %}
            <footer>
                <div class="container">
                    <p><a href="#">FAQ</a> | <a href="#">Donation</a> | &copy; 2023 My Test Project. All rights reserved.</p>
                </div>
            </footer>
            {% endblock %}
        </div>
    </body>
</html>
